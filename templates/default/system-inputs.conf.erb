[default]
host=<%= node[:hostname] %>

<%-if node[:splunk][:receiver_options][:splunktcp_ssl][:enable_splunktcp_ssl] %>
[SSL]
rootCA=<%= @root_ca %>
serverCert=<% @server_cert %>

[splunktcp-ssl://<%= node[:splunk][:receiver_options][:splunktcp_ssl][:port]%>]
connection_host=none

<%-end %>
<%-if node[:splunk][:receiver_options][:splunktcp][:enable_splunktcp] %>
[splunktcp://<%= node[:splunk][:receiver_options][:splunktcp][:port] %>]
connection_host=none

<%-end %>
<%-if node[:splunk][:receiver_options][:udp][:enable_udp] %>
<% node[:splunk][:receiver_options][:udp][:ports].each do |port| -%>
[udp://<%= port %>]
connection_host=none

<% end -%>
<%-end %>
<%-if node[:splunk][:receiver_options][:tcp][:enable_tcp] %>
<% node[:splunk][:receiver_options][:tcp][:ports].each do |port| -%>
[tcp://<%= port %>]
connection_host=none
<% end -%>
<%-end %>

